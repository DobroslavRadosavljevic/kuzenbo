{
  "name": "npm-react-start",
  "version": "1.0.0",
  "description": "A starter for creating React libraries (components, hooks, utilities).",
  "keywords": [
    "npm",
    "package",
    "react",
    "react-components",
    "react-hooks",
    "react-library",
    "typescript"
  ],
  "homepage": "https://github.com/DobroslavRadosavljevic/npm-react-start#readme",
  "bugs": {
    "url": "https://github.com/DobroslavRadosavljevic/npm-react-start/issues"
  },
  "license": "MIT",
  "author": "Dobroslav Radosavljevic <dobroslav.radosavljevic@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/DobroslavRadosavljevic/npm-react-start"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "bun test",
    "lint": "bun ultracite check",
    "format": "bun ultracite fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "bun run build",
    "bump": "bumpp --changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@happy-dom/global-registrator": "^20.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "bumpp": "^10.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "bun ultracite fix"
    ],
    "*.{json,md,yml,yaml}": [
      "bun ultracite fix"
    ]
  },
  "engines": {
    "bun": ">=1.3.6",
    "node": ">=22"
  }
}
